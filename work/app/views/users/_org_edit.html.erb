  <%= form_for @user do |f| %>
  <div class="row">
    <div class="col-md-3">
      <h2> <%= f.text_field :name, class:'form-control', value: @user.name %></h2>
    </div>
    <div class="col-md-6"></div>
    <div class="col-md-3">
      <div class="col-md-9">

      </div>
      <div class="col-md-3">
        <%= f.submit 'Update Profile', class:'btn btn-primary' %>
      </div>

    </div>

  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="col-md-5">
        <div class="user-image" style="background: url('<%= @user.avatar %>')">
          <%= f.file_field :avatar, id:'avatar-file' %>
          <%= image_tag src="cam.png", class: "cam" %>
        </div><br><br>
        <script>
            $('.cam').bind("click" , function () {
                $('#avatar-file').click();
            });
        </script>
        <button class="btn btn-primary">Follow</button>
      </div>
      <div class="col-md-7 detail">
        <table class="table table-striped">
          <tr>
            <td><span class="glyphicon glyphicon-list"></span></td>
            <td><%= f.text_field :category, class:'form-control',value: @user.category %></td>
          </tr>
          <tr>
            <td><span class="glyphicon glyphicon-globe"></span></td>
            <td><%= f.text_field :website, class:'form-control',value: @user.website %></td>
          </tr>
          <tr>
            <td><span class="glyphicon glyphicon-envelope"></span></td>
            <td><%= f.email_field :email, class:'form-control',value: @user.email %></td>
          </tr>
          <tr>
            <td><span class="glyphicon glyphicon-earphone"></span></td>
            <td><%= f.text_field :tel, class:'form-control',value: @user.tel %></td>
          </tr>
          <tr>
            <td><span class="glyphicon glyphicon-map-marker"></span></td>
            <td><%= f.text_field :address, class:'form-control',value: @user.address %></td>
          </tr>
          <tr><td></td><td></td></tr>
        </table>
      </div>
    </div>
    <div class="col-md-6">
      <h3>Social Media</h3>
      <div class="social">
        <% @user.identities.each do|provider| %>
            <%= link_to image_tag( "social icons/#{provider.provider}.png" ), "https://www.#{provider.provider}.com/app_scoped_user_id/#{provider.uid}" %><br>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h3>About Us</h3>
        <%= f.text_area :about, value: "#{@user.about}" %>

    </div>
    <div class="col-md-6">
      <h3>Mission</h3>
      <%= f.text_area :mission, value: "#{@user.mission}" %>
    </div>
  </div>
  <% end %>
  <div class="post">
    <h3>Posts(<%= @user.microposts.count %>)</h3>
    <% if @user.microposts.any? %>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>User</th>
            <th>Post Content</th>
            <th>Time</th>
          </tr>
          </thead>
          <tbody>
          <%= render @microposts %>
          </tbody>
        </table>
        <%= will_paginate @microposts, :previous_label => '<<', :next_label => '>>' %>
    <% end %>
  </div>
  </div>

